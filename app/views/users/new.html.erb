<h1>Create a New User</h1>

<%= form_with(model: @user, url: users_path, method: :post) do |form| %>
  <%= form.label :username, "Your user name here:" %>
  <%= form.text_field :username, placeholder: "Your user name here", required: true %>

  <%= form.label :email, "Your email address here:" %>
  <%= form.email_field :email, placeholder: "example@example.com", required: true %>

  <%= form.label :password, "Your password here:" %>
  <%= form.password_field :password, required: true %>

  <%= form.submit "Create User" %>
<% end %>
