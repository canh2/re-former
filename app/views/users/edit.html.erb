<!-- app/views/users/edit.html.erb -->

<h1>Edit User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>


  <%= form.label :username, "Your user name here:" %>
  <%= form.text_field :username, placeholder: "Your user name here", required: true %>

  <%= form.label :email, "Your email address here:" %>
  <%= form.email_field :email, placeholder: "example@example.com", required: true %>

  <%= form.label :password, "Your password here:" %>
  <%= form.password_field :password, required: true %>

  <%= form.submit "Update User" %>
<% end %>
